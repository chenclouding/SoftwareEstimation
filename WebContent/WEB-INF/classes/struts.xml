<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
<constant name="struts.enable.DynamicMethodInvocation" value="true"/> 
	<package name="SoftwareEstimation" extends="struts-default">
		<action name="login" class="action.LoginAction">
			<result name="success">/welcome.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<action name="regist" class="action.LoginAction" method="regist">
			<result name="success">/welcome.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<action name="getBooks" class="action.GetBooksAction">
			<result name="success">/showBook.jsp</result>
			<result name="login">/loginForm.jsp</result>
		</action>
		<action name="addBook" class="action.AddBookAction">
			<result type="chain">getBooks</result>
		</action>
		<action name="uploadPro" class="action.UploadAction">
		<param name="allowTypes">image/bmp,image/png,image/gif</param>
		<param name="savePath">E:/eclipse_workspace/SoftwareEstimation/upload</param>
			<result>/pro.jsp</result>
			<result name="input">/loginForm.jsp</result>
		</action>
	</package>
</struts>